format-title()
    font-family: $font_medium
    font-size: $size_h1
    color $color_b
    letter-spacing: -1px
    text-align: center 
    display: block
    line-height: 50px
    margin: 0 0 15px 0

p_sub-title()
    font-size: 22px
    color $color_f
    text-align center
    margin-bottom 0px
    letter-spacing: -1px
    width: 100%
    font-weight: normal
    display: block

sub_titulos()
    color $color_b
    font-size $size_h3
    margin 0 0 15px 0

sub_titulos_inter()
    font-family $font_medium
    font-size $size_h2
    color $color_b
    letter-spacing: -1px
    display: block
    line-height: 50px
    margin: 0 0 10px 0

btn_action_small()
    align-self flex-start
    margin 25px 0 15px 0
a-moreinfo()
    color $color_azul
    font-size 15px
    align-self flex-start
    transition all 0.3s
    border-bottom: 1px solid transparent
    &:hover
        text-decoration: none
        border-bottom: 1px solid $color_azul


    